read.csv("C:\\Users\\oyshi\\Downloads\\Car_Purchase.csv")->df
df
View(df)
install.packages("dplyr")
library(dplyr)
df %>% select(-1)->df
View(df)
install.packages("caTools")
library(caTools)
sample.split(df$Purchased,SplitRatio = 0.65)->split_values
subset(df,split_values==T)->train_set
subset(df,split_values==F)->test_set
install.packages("rpart")
library(rpart)


# Build classification tree
mod_class <- rpart(Purchased ~ ., data=train_set, method="class")

# Predict on test set
result_class <- predict(mod_class, newdata=test_set, type="class")
rpart.plot::rpart.plot(mod_class)
table(test_set$Purchased,result_class)
#Regression
library(ggplot2)
View(diamonds)
??diamonds
#Spliting data into train and test
library(caTools)
sample.split(diamonds$price,SplitRatio = 0.65)->split_values
subset(diamonds,split_values==T)->train_reg
subset(diamonds,split_values==F)->test_reg
lm(price~.,data=train_reg)->mod_regress
plot(mod_regress)
predict(mod_regress,test_reg)->result_regress
cbind(Actual=test_reg$price,predicted=result_regress)->final_data
as.data.frame(final_data)->final_data
View(final_data)
#Finding error
(final_data$Actual-final_data$predicted)->error
cbind(final_data,error)->final_data
rmse<-sqrt(mean(final_data$error^2))
rmse
View(final_data)
